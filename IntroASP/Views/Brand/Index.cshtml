@model List<Brand>

<h1>Marcas</h1>
<table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
            <th>ID</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var brand in Model)
        {
                    <tr>
                        <td>@Html.DisplayFor(x => brand.Name)</td>
                        <td>@Html.DisplayFor(x => brand.BrandId)</td>
                    </tr>
        }
    </tbody>

</table>