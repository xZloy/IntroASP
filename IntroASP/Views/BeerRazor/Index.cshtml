@model List<IntroASP.Dtos.BeerDto>

<h2>Cervezas</h2>

<p class="mb-3">
    <a class="btn btn-success" asp-controller="BeerRazor" asp-action="Create">Nueva</a>
    <a class="btn btn-secondary" asp-controller="Beer" asp-action="ExportCsv">Exportar CSV</a>
    <a class="btn btn-secondary" asp-controller="Beer" asp-action="ExportPdf">Exportar PDF</a>
</p>

@if (Model?.Any() == true)
{
    <table class="table table-striped">
        <thead><tr><th>Id</th><th>Nombre</th><th>BrandId</th><th>CountryCode</th><th>Flag</th><th></th></tr></thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.BeerId</td>
                    <td>@b.Name</td>
                    <td>@b.BrandId</td>
                    <td>@b.CountryCode</td>
                    <td>
                        <img src="@b.FlagUrl" alt="@b.CountryCode" style="height:20px; width:auto;" />
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-controller="BeerRazor" asp-action="Edit" asp-route-id="@b.BeerId">Editar</a>
                        <form asp-controller="BeerRazor" asp-action="DeleteConfirmed" asp-route-id="@b.BeerId" method="post" style="display:inline">
                            <button class="btn btn-danger btn-sm" type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No hay cervezas para mostrar.</p>
}


