@using BeerSoap
@model IEnumerable<BeerSoap.BeerDto>

@{
    ViewData["Title"] = "Cervezas (SOAP)";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Agregar Cerveza</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Marca</th>
            <th>País</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var beer in Model)
        {
            <tr>
                <td>@beer.Id</td>
                <td>@beer.Name</td>
                <td>@beer.Brand</td>
                <td>@beer.CountryCode</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(beer.FlagUrl))
                    {
                        <img src="@beer.FlagUrl" width="32" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@beer.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@beer.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
