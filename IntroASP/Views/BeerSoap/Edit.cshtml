@model BeerSoap.BeerUpdateDto
@{
    ViewData["Title"] = "Editar cerveza (SOAP)";
    var currentBrand = ViewBag.CurrentBrand as string;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Marca</label>
        <select asp-for="BrandId" class="form-select" asp-items="ViewBag.Brands"></select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">CountryCode (opcional)</label>
        <input asp-for="CountryCode" class="form-control" />
        <span asp-validation-for="CountryCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">FlagUrl (opcional)</label>
        <input asp-for="FlagUrl" class="form-control" />
        <span asp-validation-for="FlagUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>

    <div class="text-danger mt-2">
        @Html.ValidationSummary()
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
