@model BeerSoap.BeerUpdateDto
@{
    ViewData["Title"] = "Editar cerveza (SOAP)";
    var currentBrand = ViewBag.CurrentBrand as string;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label class="form-label">Marca actual</label>
        <input class="form-control" value="@(currentBrand ?? "(desconocida)")" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">BrandId (nuevo o el mismo)</label>
        <input asp-for="BrandId" type="number" class="form-control" placeholder="Ej: 1, 2, 3..." />
        <span asp-validation-for="BrandId" class="text-danger"></span>
        <div class="form-text">Ingresa el Id de la marca que quieres asociar.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">CountryCode (opcional)</label>
        <input asp-for="CountryCode" class="form-control" />
        <span asp-validation-for="CountryCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">FlagUrl (opcional)</label>
        <input asp-for="FlagUrl" class="form-control" />
        <span asp-validation-for="FlagUrl" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>

    <div class="text-danger mt-2">
        @Html.ValidationSummary()
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
